            <RowDefinition Height="70*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="260*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="210*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="1" Fill="#FF051B5C" Grid.ColumnSpan="8" Grid.RowSpan="2"/>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="#FFCADBF3" Grid.ColumnSpan="7" Grid.RowSpan="2"/>
        <Rectangle Grid.Row="3" Grid.Column="1" Fill="#FF68B6E9"/>
        <Rectangle Grid.Row="3" Grid.Column="3" Fill="#FF68B6E9" Grid.ColumnSpan="2" Margin="100,0,0,0"/>
        <Rectangle Grid.Row="4" Grid.Column="1" Fill="#FFCADBF3" Grid.ColumnSpan="5" Grid.RowSpan="14"/>
        <Rectangle Grid.Row="4" Grid.Column="5" Fill="#FFCADBF3" Grid.RowSpan="7" Grid.ColumnSpan="2"/>
        <Rectangle Grid.Row="10" Grid.Column="5" Fill="#FFCADBF3" Grid.RowSpan="8" Grid.ColumnSpan="2"/>
        <Rectangle Grid.Row="3" Grid.Column="7" Fill="#FFCADBF3" Grid.RowSpan="15"/>
        <Rectangle Grid.Row="1" Grid.Column="8" Fill="#FFCADBF3" Grid.RowSpan="17"/>

        <Rectangle Grid.Row="4" Grid.Column="5" Fill="White" Grid.ColumnSpan="2"/>
        <Rectangle Grid.Row="10" Grid.Column="5" Fill="White" Grid.ColumnSpan="2"/>


        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="12" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="13" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="14" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="15" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="16" Grid.ColumnSpan="8"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Column="1" Grid.Row="17" Grid.ColumnSpan="8"/>

        <Border BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.Column="2"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="2" Grid.Column="2"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.Column="3"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="2" Grid.Column="3"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2"/>
        <Border BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.Column="6"/>
