        <Button x:Name="aceptar" Content="Aceptar" HorizontalAlignment="Right" VerticalAlignment="Center" Height="35" Grid.Column="7" Grid.Row="18" Width="120" Margin="5,3,5,3" Foreground="White" Background="#FF0F2F90" FontWeight="Bold" FontFamily="Arial" FontSize="20" Click="aceptar_Click"/>

    </Grid>
